<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spandroid.dev.recyclerView.RecyclerViewActivity">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewLoadMore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_50dp" />

    <ProgressBar
        android:id="@+id/progressLoadMore"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/padd_10"
        android:background="@drawable/circular_shadow"
        android:padding="@dimen/dimen_5dp" />

</FrameLayout>
